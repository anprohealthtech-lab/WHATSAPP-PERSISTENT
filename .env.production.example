# Production Environment Variables for DigitalOcean Deployment
# Copy this to .env.production and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@your-db-host:5432/database_name
# For DigitalOcean Managed Database:
# DATABASE_URL=postgresql://doadmin:password@db-postgresql-nyc1-12345-do-user-123456-0.b.db.ondigitalocean.com:25060/defaultdb?sslmode=require

# Application Configuration
NODE_ENV=production
PORT=3001
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# WhatsApp Configuration
WHATSAPP_CLIENT_ID=production-client
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# CORS Configuration (add your domain)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info

# Optional: External Services
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Optional: Redis for session storage (recommended for production)
# REDIS_URL=redis://your-redis-host:6379